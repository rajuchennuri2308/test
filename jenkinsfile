pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "prakharm1234/shanu-app" // Replace with your Docker Hub repository name
        TAG = "${BUILD_NUMBER}" // Image tag, can use versioning if needed
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the GitHub repository
                git url: 'https://github.com/yudfgh/shanu.git', branch: 'master'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using the cloned repository
                    sh "docker build -t ${DOCKER_IMAGE}:${TAG} ."
                }
            }
        }
        stage('Push to Docker Hub') {
            steps {
                script {
                    // Log in to Docker Hub using Jenkins credentials
                    withDockerRegistry([credentialsId: 'docker-cred', url: '']) {
                        // Push the Docker image to Docker Hub
                        sh "docker push ${DOCKER_IMAGE}:${TAG}"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
